pipeline {
    agent any
    tools {
      terraform 'terraform-1.0.5'
    }
    stages {
        stage('Start the application') {
          steps {
              withAWS(region:'eu-central-1', credentials:'aws_ecsecrec2') {
                script {
                  sh '''
                  which terraform
                  terraform init
                  terraform apply --auto-approve
                  '''
                }
              }
          }
        }
    }
}